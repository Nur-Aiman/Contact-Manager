<html>
  <head>

    <link
      href='https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css'
      rel='stylesheet'
    />
    <script
      src='https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js'
    ></script>

    <title>User Card</title>
    <style>
      body {background-image: url('/images/city.jpg'); background-size: cover; }
      .user-card { display: flex; align-items: center; background-color:
      #ffffff; color: #000000; padding: 20px; margin: 50px; margin-right: 20%;
      margin-left: 20%; border-radius: 10px; box-shadow: 0px 0px 10px #555555; }
      . user-card-image { width: 100px; height: 100px; border-radius: 50%;
      background-color: #888888; margin-right: 40px; } .user-card-details {
      flex: 1; text-align: center; /* align text to center */ } .user-card-name
      { font-size: 35px; margin: 0; text-align: center; /* align text to center
      */ } .user-card-email, .user-card-phone { font-size: 24px; margin: 5px 0;
      text-align: center; /* align text to center */ } .user-card-actions {
      display: flex; justify-content: flex-end; align-items: center; }
      .user-card-update-button, .user-card-delete-button { background-color:
      #00aaff; color: #ffffff; padding: 10px; border: none; border-radius: 5px;
      margin-left: 10px; cursor: pointer; } .user-card-update-button:hover,
      .user-card-delete-button:hover { background-color: #0088cc; }
    </style>
  </head>
  <body>

    <nav class='navbar navbar-expand-sm bg-dark navbar-dark'>
      <div cass='container-fluid'>
        <h4>
          <ul class='navbar-nav'>

            <li class="'nav-item"><a class='nav-link' href='/main'>Main Page</a></li>
            <li class="'nav-item"><a
                class='nav-link'
                href='/api/contacts/addContact'
              >Add Contact</a></li>
            <li class="'nav-item"><a class='nav-link' href='/api/contacts'>View
                All Contact</a></li>
          </ul>
        </h4>
      </div>
    </nav>

    <div class='user-card mt-4'>

      <div class='user-card-details'>
        <h2 class='user-card-name'>Name :
          <span
            style='text-transform: capitalize; font-family: sans-serif;'
          >{{contact.name}} </span></h2>
        <p class='user-card-email'>Email : {{contact.email}}</p>
        <p class='user-card-phone'>Phone Number : {{contact.phone}}</p>
        <div class='user-card-actions'>

          <form
            action='/api/contacts/updateContact/{{contact._id}}'
            method='GET'
          >
            <button
              id='view-contacts-btn'
              class='btn btn-primary'
              type='submit'
            >Update</button>
          </form>

          <form
            action='/api/contacts/{{contact._id}}?_method=DELETE'
            method='POST'
            class='user-card-delete-form'
          >
            <input type='hidden' name='_method' value='DELETE' />
            <button
              type='submit'
              id='view-contacts-btn'
              class='btn btn-primary'
            >Delete</button>
          </form>

        </div>
      </div>
    </div>

  </body>
</html>